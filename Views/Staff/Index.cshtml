@model IEnumerable<mvc.Models.Staff>

@*
testes de de index e comentario
*@

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CellPhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VATNumber)
            </th>
            <th>
                Edit Record
            </th>
        </tr>

    </thead>
    <tbody>
        @foreach (Staff staff in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => staff.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => staff.Birthday)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => staff.CellPhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => staff.VATNumber)
                </td>
                <td>
                    <a asp-area="" asp-action="Details" asp-controller="Staff" asp-route-id="@staff.ID" class="btn btn-primary">Details</a>
                    <a asp-area="" asp-action="Edit" asp-controller="Staff" asp-route-id="@staff.ID" class="btn btn-primary">Edit</a>
                    <a asp-area="" asp-action="Delete" asp-controller="Staff" asp-route-id="@staff.ID" class="btn btn-primary">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>
<div class="row">
    <div class="col-4">
        <a asp-controller="Staff" asp-action="Create">Create new</a>
    </div>
</div>
